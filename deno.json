{
	"tasks": {
		"start": "deno run -A dev.ts"
	},
	"importMap": "./import_map.json",
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"dom.extras",
			"deno.ns"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "https://esm.sh/react@18.2.0"
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 120,
			"indentWidth": 4,
			"singleQuote": true,
			"semiColons": false,
			"proseWrap": "preserve"
		}
	}
}
